{
  "name": "erlang-ls",
  "version": "0.0.4",
  "publisher": "erlang-ls",
  "description": "The Visual Studio Code Extension for the Erlang Language Server",
  "icon": "erlang_ls/images/erlang-ls-logo-small.png",
  "homepage": "https://github.com/erlang-ls/vscode",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erlang-ls/vscode.git"
  },
  "bugs": {
    "url": "https://github.com/erlang-ls/vscode/issues"
  },
  "main": "./client/out/client.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "cd erlang_ls && make && cd ../client && npm run compile",
    "watch": "cd client && npm run watch",
    "postinstall": "cd client && npm install"
  },
  "author": "erlang_ls",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.33.0"
  },
  "activationEvents": [
    "onLanguage:erlang"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Erlang LS",
      "properties": {
        "erlang_ls.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Erlang language server."
        },
        "erlang_ls.executable_path": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description":
            "Set the path to your erlang_ls executable, if it's not already on your $PATH. Works with ~, ${HOME} and ${workspaceFolder}."
        }
      }
    },
    "languages": [
      {
        "id": "erlang",
        "aliases": [
          "Erlang"
        ],
        "extensions": [
          ".erl",
          ".hrl",
          ".src",
          ".config"
        ]
      }
    ],
    "grammars": [
      {
        "language": "erlang",
        "scopeName": "source.erlang",
        "path": "./erlang.tmbundle/Syntaxes/Erlang.plist"
      }
    ]
  },
  "files": [
    "erlang_ls/_build/default/bin/erlang_ls",
    "erlang.tmbundle"
  ],
  "dependencies": {}
}
